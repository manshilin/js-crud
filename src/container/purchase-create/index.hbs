<div class="main">
    {{#with data}}
    <form method="POST" action="/purchase-submit?id={{id}}" class="form-card">
    {{> heading title='Ваше замовлення' }}
    <ul class="cart">
        {{#each cart}}
        <li class="cart__item">
            <span>{{text}}</span>
            <span>{{price}}</span>
        </li>
        {{/each}}
    </ul>
    {{> divider}}
    {{> field label='Ім\'я' name='firstName' }}
    {{> field label='Прізвище' name='lastName' }}
    {{> field label='Телефон' name='phone' }}
    {{> field label='Email' name='email' }}
    {{> field label='Коментар' name='comment' }}
    {{> field label='Списати бонуси' name='bonus'}}
    {{> field label='Промокод' name ='promocode' }}
    {{> divider }}

    {{> field type='number' value = totalPrice name ='totalPrice' disabled ='true' }}
    {{> field  type='number'  value = productPrice name ='productPrice' disabled ='true' }}
    {{> field type='number'  value = deliveryPrice name ='deliveryPrice' disabled ='true' }}
    {{> field type='number'  value = amount name ='amount' disabled ='true' }}


  <strong class="form-card__total">
    <span>До сплати:</span>
    <span>{{totalPrice}}грн. ({{bonus}} бонусів, грн.)</span>
  </strong>

    {{> button text='Замовити' }}
    {{/with}}

    </form>

</div>