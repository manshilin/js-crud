<section>
    <div class="form">
        <h1 class="form__title">List Products</h1>
        <div class="product-list">
            {{#with data.products}}
            {{#if isEmpty}}
            <mark>There are no products</mark>
            {{else}}
                {{#each list}}
                {{> product-card}}
             {{/each}} 
            {{/if}}
            {{/with}}
        </div>
    </div>
</section> 