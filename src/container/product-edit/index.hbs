<section>
  
  <form method="POST" action="/product-edit" class="form shadow p-3 mb-5 bg-white rounded">
    <h1 class="form__title">Edit products</h1>
    
      <div class="row">
        <div class="col-4 form__field">
          <label for="name" class="form__label"> Name: </label>
          <input type="text" name="name" class="form__input" value="{{data.product.name}}">
        </div>
        <div class="col-4 form__field">
          <label for="price" class="form__label"> Price: </label>
          <input type="namber" name="price" class="form__input" value="{{data.product.price}}">
        </div>
        <div class="col-4 form__field">
          <label for="id" class="form__label"> ID: </label>
          <input type="namber" name="id" class="form__input" value="{{data.product.id}}">
        </div>

      </div>
      <div class="row">
        <div class="col-12 form__field">
          <label for="description" class="form__label"> Description: </label>
          <textarea type="text" name="description" id="description"  class="form__input" cols="30"
            rows="3"> {{data.product.description}} </textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
            <a href="/product-edit?id={{id}}" class="btn btn-primary">Save product edit</a>
          </div>
          <div class="col-6">
            <a href="/product-delete?id={{id}}" class="btn btn-danger">Product delete</a>
          </div>
      </div>
    </form>
</section>